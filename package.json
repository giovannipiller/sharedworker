{
  "name": "@okikio/sharedworker",
  "version": "1.0.4",
  "type": "module",
  "sideEffects": false,
  "description": "A small spec. compliant polyfill/ponyfill for SharedWorkers, it acts as a drop in replacement for normal Workers, and supports an API surface that matches normal Workers.",
  "umd": "sharedworker",
  "access": "public",
  "legacy": "lib/index.cjs",
  "main": "lib/index.cjs",
  "types": "@types/index.d.ts",
  "browser": "lib/index.mjs",
  "module": "lib/index.mjs",
  "exports": {
    ".": {
      "require": "./lib/index.cjs",
      "import": "./lib/index.mjs",
      "default": "./lib/index.mjs"
    },
    "./polyfill": {
      "require": "./lib/polyfill.cjs",
      "import": "./lib/polyfill.mjs",
      "default": "./lib/polyfill.mjs"
    },
    "./ponyfill": {
      "require": "./lib/ponyfill.cjs",
      "import": "./lib/ponyfill.mjs",
      "default": "./lib/ponyfill.mjs"
    },
    "./simple": {
      "require": "./lib/simple.cjs",
      "import": "./lib/simple.mjs",
      "default": "./lib/simple.mjs"
    },
    "./lib/*": "./lib/*"
  },
  "directories": {
    "lib": "./lib",
    "src": "./src",
    "@types": "./@types"
  },
  "files": [
    "lib",
    "src",
    "@types"
  ],
  "scripts": {
    "typedoc": "esno ./.typedoc/build.ts && typedoc && esno ./rehype.ts",
    "preview": "vite docs",
    "start": "vite docs",
    "repl": "esno repl.ts",
    "build": "vite build",
    "pre-release": "pnpm build && pnpm typedoc",
    "semantic-release": "semantic-release"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "changelog": {
    "repo": "sharedworker",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "internal": ":house: Internal"
    },
    "cacheDir": ".changelog"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS --verbose"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/okikio/sharedworker.git"
  },
  "keywords": [
    "sharedworker",
    "typescript",
    "worker",
    "web",
    "polyfill",
    "ponyfill",
    "es2022"
  ],
  "author": {
    "name": "Okiki Ojo",
    "email": "hey@okikio.dev",
    "url": "https://okikio.dev"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/okikio/sharedworker/issues"
  },
  "homepage": "https://sharedworker.okikio.dev",
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/web": "^0.0.84",
    "esno": "^0.16.3",
    "fast-glob": "^3.2.12",
    "hastscript": "^7.1.0",
    "husky": "^8.0.2",
    "pnpm": "^7.18.2",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-external-links": "^2.0.1",
    "rehype-parse": "^8.0.4",
    "rehype-slug": "^5.1.0",
    "rehype-stringify": "^9.0.3",
    "rehype-urls": "^1.1.1",
    "semantic-release": "^19.0.5",
    "tiny-glob": "^0.2.9",
    "typedoc": "^0.23.22",
    "typedoc-plugin-extras": "^2.3.1",
    "typedoc-plugin-mdn-links": "^2.0.0",
    "typescript": "^4.9.4",
    "unified": "^10.1.2",
    "vite": "^4.0.1",
    "vite-plugin-dts": "^1.7.1"
  },
  "dependencies": {
    "comlink": "^4.3.1"
  }
}
